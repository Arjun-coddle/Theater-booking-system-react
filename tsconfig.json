{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "lib": ["ES2015", "DOM"],
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "jest",
            "node"
        ]
    },
    "include": [
        "src/**/*",
        ".eslintrc.js",
        "jest.config.js"
    ]
}